{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "enum": ["boolean", "number", "string", "multiline", "array"]
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "example": {},
          "regex": {
            "type": "string"
          },
          "required": {
            "type": "boolean",
            "default": true
          },
          "default": {},
          "min": {
            "type": "number",
            "minimum": 0
          },
          "max": {
            "type": "number",
            "minimum": 1
          },
          "enum": {
            "type": "array",
            "items": {}
          },
          "enumDescription": {
            "type": "array",
            "items": {}
          },
          "format": {
            "type": "string",
            "enum": ["date-time", "date", "time", "email", "uri"]
          }
        },
        "required": ["name", "type", "description"]
      }
    }
  },
  "required": ["name", "description", "properties"]
}
